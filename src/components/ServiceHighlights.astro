---
import { serviceHighlights } from "@data/serviceHighlights";
---

<section class="bg-white py-20">
  <div class="mx-auto grid w-full max-w-6xl gap-8 px-6 md:grid-cols-3">
    {serviceHighlights.map((highlight) => (
      <article class="card">
        <h3 class="text-lg font-semibold text-text">{highlight.title}</h3>
        <p class="mt-3 text-sm text-text/70">{highlight.description}</p>
      </article>
    ))}
  </div>
</section>
