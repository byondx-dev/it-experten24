---
import SectionHeading from "@components/SectionHeading.astro";
import { benefitHighlights, benefitSteps } from "@data/benefits";
---

<section class="bg-white py-20">
  <div class="mx-auto grid w-full max-w-6xl gap-16 px-6 lg:grid-cols-2">
    <div>
      <SectionHeading
        badge="Warum IT-Experten 24?"
        title="Wir sprechen Klartext und lösen Probleme nachhaltig."
        subtitle="Unsere Expert:innen kombinieren technisches Know-how mit Feingefühl. Wir hören zu, analysieren Ihre Situation und erklären verständlich – damit Sie Ihre Technik wieder gerne nutzen."
      />
      <ul class="mt-8 space-y-4">
        {benefitSteps.map((step, index) => (
          <li class="flex gap-4">
            <span class="mt-1 inline-flex h-8 w-8 items-center justify-center rounded-full bg-brand-primary/10 text-brand-primary">
              {index + 1}
            </span>
            <div>
              <h3 class="text-lg font-semibold text-text">{step.title}</h3>
              <p class="text-sm text-text/70">{step.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>
    <div class="space-y-6">
      {benefitHighlights.map((highlight) => (
        <div class="card">
          <h3 class="text-lg font-semibold text-text">{highlight.title}</h3>
          <p class="mt-2 text-sm text-text/70">{highlight.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
