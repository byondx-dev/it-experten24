---
import SectionHeading from "@components/SectionHeading.astro";
import { services } from "@data/services";
---

<section class="mx-auto w-full max-w-6xl px-6 py-20">
  <SectionHeading
    title="Leistungen, die wirklich helfen"
    subtitle="Wir bringen Ruhe in Ihre Technik: persönlich, verständlich und mit Liebe zum Detail – für München und Umgebung."
    align="center"
  />
  <div class="mt-12 grid gap-8 md:grid-cols-2 xl:grid-cols-3">
    {services.map((service) => (
      <article class="card h-full">
        <h3 class="text-xl font-semibold text-text">{service.title}</h3>
        <p class="mt-3 text-sm text-text/70">{service.description}</p>
        <a href={service.href} class="mt-6 inline-flex items-center gap-2 text-sm font-medium text-brand-primary hover:text-brand-accent">
          Mehr erfahren
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-4 w-4 fill-none stroke-current" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14" />
            <path d="m12 5 7 7-7 7" />
          </svg>
        </a>
      </article>
    ))}
  </div>
</section>
