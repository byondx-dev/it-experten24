import SectionHeading from "@components/SectionHeading.astro";
---

<section class="mx-auto w-full max-w-6xl px-6 py-20">
  <SectionHeading
    title="Leistungen, die wirklich helfen"
    subtitle="Wir bringen Ruhe in Ihre Technik: persönlich, verständlich und mit Liebe zum Detail – für München und Umgebung."
    align="center"
  />
  <div class="mt-12 space-y-8">
    <article class="card">
      <h3 class="text-xl font-semibold text-text">Persönliche Betreuung</h3>
      <p class="mt-3 text-sm text-text/70">
        Wir arbeiten ohne Callcenter, Sie sprechen immer mit einer festen Ansprechperson vor Ort in München.
      </p>
    </article>
    <article class="card">
      <h3 class="text-xl font-semibold text-text">Zertifizierte Expert:innen</h3>
      <p class="mt-3 text-sm text-text/70">
        Microsoft, Apple, AVM, Synology und weitere Hersteller – wir kennen die Systeme und erklären sie verständlich.
      </p>
    </article>
    <article class="card">
      <h3 class="text-xl font-semibold text-text">Sicher &amp; DSGVO-konform</h3>
      <p class="mt-3 text-sm text-text/70">
        Fernwartung, Passwörter und Backups – alles erfolgt nach aktuellen Sicherheitsstandards und mit Datenschutz im Fokus.
      </p>
    </article>
  </div>
</section>
