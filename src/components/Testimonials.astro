---
import SectionHeading from "@components/SectionHeading.astro";
import { testimonials } from "@data/testimonials";
---

<section class="bg-background py-20">
  <div class="mx-auto w-full max-w-6xl px-6">
    <SectionHeading
      title="Das sagen Kund:innen in München"
      subtitle="Ob Senior:innen oder Familien – wir begleiten alle Menschen auf ihrem digitalen Weg."
      align="center"
    />
    <div class="mt-12 grid gap-8 md:grid-cols-3">
      {testimonials.map((testimonial) => (
        <article class="card">
          <p class="text-sm text-text/80">{testimonial.quote}</p>
          <p class="mt-4 text-sm font-semibold text-text">{testimonial.author}</p>
        </article>
      ))}
    </div>
  </div>
</section>
