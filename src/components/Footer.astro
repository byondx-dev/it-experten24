---
import { company } from "@data/company";
import { footerServiceLinks, footerUtilityLinks } from "@data/footer";

const contactItems = [
  {
    label: "Telefon",
    href: company.phone.href,
    value: company.phone.label,
  },
  {
    label: "WhatsApp",
    href: company.whatsapp.href,
    value: company.whatsapp.label,
    external: true,
  },
  {
    label: "E-Mail",
    href: company.email.href,
    value: company.email.label,
  },
  {
    label: "Öffnungszeiten",
    value: company.openingHours,
  },
];
---

<footer class="mt-20 border-t border-white/40 bg-white">
  <div class="mx-auto grid w-full max-w-6xl gap-16 px-6 py-16 md:grid-cols-4">
    <div>
      <h3 class="text-lg font-semibold text-text">{company.name}</h3>
      <p class="mt-3 text-sm text-text/70">Ihr IT-Dienstleister für München und Umgebung. Schnelle Hilfe für Zuhause und remote.</p>
      <div class="mt-4 flex gap-3 text-sm">
        {footerUtilityLinks.map((link) => (
          <a
            href={link.href}
            class="hover:text-brand-primary"
            rel={link.external ? "noopener" : undefined}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
    <div>
      <h4 class="text-sm font-semibold uppercase text-text">Kontakt</h4>
      <ul class="mt-3 space-y-2 text-sm text-text/70">
        {contactItems.map((item) => (
          <li>
            {item.label}:
            {item.href ? (
              <>
                {" "}
                <a
                  href={item.href}
                  class="hover:text-brand-primary"
                  rel={item.external ? "noopener" : undefined}
                >
                  {item.value}
                </a>
              </>
            ) : (
              <> {item.value}</>
            )}
          </li>
        ))}
      </ul>
    </div>
    <div>
      <h4 class="text-sm font-semibold uppercase text-text">Leistungen</h4>
      <ul class="mt-3 space-y-2 text-sm text-text/70">
        {footerServiceLinks.map((link) => (
          <li>
            <a href={link.href} class="hover:text-brand-primary">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
    <div>
      <h4 class="text-sm font-semibold uppercase text-text">Newsletter</h4>
      <p class="mt-3 text-sm text-text/70">Praktische Tipps und Sicherheitswarnungen für Zuhause. Jederzeit abbestellbar.</p>
      <form class="mt-4 flex gap-2">
        <input type="email" name="email" placeholder="E-Mail" class="w-full rounded-soft border border-brand-primary/30 bg-white px-4 py-2 text-sm outline-none focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/30" aria-label="E-Mail-Adresse" />
        <button type="submit" class="btn-primary text-sm">Anmelden</button>
      </form>
    </div>
  </div>
  <div class="border-t border-white/60 bg-background py-6">
    <p class="text-center text-xs text-text/60">
      © {new Date().getFullYear()} {company.name} – IT-Service für Privatkunden in München.
    </p>
  </div>
</footer>
